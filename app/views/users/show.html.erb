<% content_for :title do %>
	Your Profile
<% end %>



<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>User is in roles:</strong>
  <ul>
  	<% @user.roles.each do |r|%>
  		<li>
  			<%= r.name %>
  		</li>
  	<% end %>
  </ul>
  
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
