<% content_for :title do %>
	All Registered Users
<% end %>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        
        <% if can? :read, user %>
			<td><%= link_to 'Show', user %></td>
		<% end %>

        <% if can? :manage, user %>
			<td><%= link_to 'Edit', edit_user_path(user) %></td>
			<td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
		<% end %>
		
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
